<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sra.sample.service.dao.SampleMapperDao">
    <select id="test" resultType="vMap">
        /* sra.sample.service.dao.SampleMapperDao.test */
        SELECT id, name FROM test
    </select>

    <update id="updatePassword" parameterType="sra.sample.model.UserVo">
        /* sra.sample.service.dao.SampleMapperDao.updatePassword */
        UPDATE USER
           SET PASSWORD = #{pwd}
             , UPDATE_USER_ID = #{sessionUserId}
         WHERE USER_ID = #{userId}
    </update>
</mapper>